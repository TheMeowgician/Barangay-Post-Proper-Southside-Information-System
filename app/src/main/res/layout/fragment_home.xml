<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context=".HomeFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC">

    <RelativeLayout
        android:id="@+id/homeHeaderRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cityOfTaguigSealLogoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/city_of_taguig_seal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"/>

        <TextView
            android:id="@+id/postProperSouthSideTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POST PROPER SOUTHSIDE \n TAGUIG CITY"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16sp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/postProperSouthSideLogoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/post_proper_southside_barangay_logo"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:translationY="-2dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/cityHallImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/view_of_city_hall_in_dijon_city"
        android:layout_below="@+id/homeHeaderRelativeLayout"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/notableProjectsOfOurBarangayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notable Projects of our\n Barangay"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/cityHallImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@id/loremIpsum1TextViewLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_below="@+id/notableProjectsOfOurBarangayTextView">

        <TextView
            android:id="@+id/loremIpsum1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis pulvinar vel purus id elementum. Etiam faucibus tempus sapien non sodales. Short Description"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/poppins_light"
            android:layout_centerHorizontal="true"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/searchAndRescueRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/loremIpsum1TextViewLinearLayout">

        <androidx.cardview.widget.CardView
            android:id="@+id/searchAndRescueCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardBackgroundColor="#F4F4F4"
            android:elevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/search_and_rescue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search and rescue during flood"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis pulvinar vel purus id elementum. Etiam faucibus tempus sapien non sodales."
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"/>

                <TextView
                    android:id="@+id/seeInfoTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="See info"
                    android:textSize="12sp"
                    android:textColor="#904DBC"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/roadCleaningRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/searchAndRescueRelativeLayout"
        android:elevation="50dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/roadCleaningCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardBackgroundColor="#F4F4F4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/road_cleaning"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Road Cleaning"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis pulvinar vel purus id elementum. Etiam faucibus tempus sapien non sodales."
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"/>

                <TextView
                    android:id="@+id/seeInfoTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="See info"
                    android:textSize="12sp"
                    android:textColor="#904DBC"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bestInBarangayRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/roadCleaningRelativeLayout"
        android:elevation="50dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/bestInBarangayCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            app:cardBackgroundColor="#F4F4F4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/awards"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Best in Barangay 2024 Award"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis pulvinar vel purus id elementum. Etiam faucibus tempus sapien non sodales."
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"/>

                <TextView
                    android:id="@+id/seeInfoTextView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="See info"
                    android:textSize="12sp"
                    android:textColor="#904DBC"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>

</ScrollView>