<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    tools:context=".HomeFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0FA">

    <RelativeLayout
        android:id="@+id/homeHeaderRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/cityOfTaguigSealLogoImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/city_of_taguig_seal"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/postProperSouthSideTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POST PROPER SOUTHSIDE \n TAGUIG CITY"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="70dp"/> <!-- Added horizontal margin -->

        <ImageView
            android:id="@+id/postProperSouthSideLogoImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/post_proper_southside_barangay_logo"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/cityHallImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/view_of_city_hall_in_dijon_city"
        android:layout_below="@+id/homeHeaderRelativeLayout"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/notableProjectsOfOurBarangayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notable Projects of our\n Barangay"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/cityHallImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/loremIpsum1TextViewLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_below="@+id/notableProjectsOfOurBarangayTextView">

        <TextView
            android:id="@+id/loremIpsum1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="These are the notable projects of our barangay that are aimed to help the people of our community."
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/poppins_light"
            android:layout_centerHorizontal="true"
            />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/notableProjectsOfOurBarangayHorizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loremIpsum1TextViewLinearLayout"
        android:layout_centerHorizontal="true"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/notableProjectsOfOurBarangayRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <RelativeLayout
                android:id="@+id/taguigLoveCaravanRelativeLayout"
                android:layout_width="300dp"
                android:layout_height="390dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/searchAndRescueCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:cardBackgroundColor="#5E4B8A"
                    android:elevation="50dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/taguig_love_caravan_image"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TAGUIG LOVE CARAVAN"
                            android:textSize="16sp"
                            android:textColor="#F0F0FA"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Medical and Dental Mission\nProject of Taguig City Mayor Lani Cayetano in coordination with Punong Barangay Quirino Sarono a successful activity for the people of Post Proper Southside."
                            android:textSize="12sp"
                            android:textColor="#F0F0FA"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"/>

                        <TextView
                            android:id="@+id/seeInfoTextView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#EBCAFF"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/livelihoodAssistanceRelativeLayout"
                android:layout_width="300dp"
                android:layout_height="390dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="30dp"
                android:elevation="50dp"
                android:layout_toRightOf="@id/taguigLoveCaravanRelativeLayout">

                <androidx.cardview.widget.CardView
                    android:id="@+id/roadCleaningCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:cardBackgroundColor="#5E4B8A">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/livelihood_assistance_image"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LIVELIHOOD ASSISTANCE"
                            android:textSize="16sp"
                            android:textColor="#F0F0FA"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text='The City of Taguig, under Mayor Lani Cayetano, launched the "Priority Families" project to promote proper nutrition for all, especially during the 50th Nutrition Month.'
                            android:textSize="12sp"
                            android:textColor="#F0F0FA"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"/>

                        <TextView
                            android:id="@+id/seeInfoTextView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#EBCAFF"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ManilaWaterIECRelativeLayout"
                android:layout_width="300dp"
                android:layout_height="390dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="30dp"
                android:elevation="50dp"
                android:layout_toRightOf="@id/livelihoodAssistanceRelativeLayout">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bestInBarangayCardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    app:cardBackgroundColor="#5E4B8A">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/manila_water_iec_image"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MANILA WATER IEC"
                            android:textSize="16sp"
                            android:textColor="#F0F0FA"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Manila Water and Taguig City Government launched the Individualization Palar Project at the New Taguig City Hall Convention Center"
                            android:textSize="12sp"
                            android:textColor="#F0F0FA"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp"/>

                        <TextView
                            android:id="@+id/seeInfoTextView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#EBCAFF"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginRight="28dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


        </RelativeLayout>


    </HorizontalScrollView>

    <TextView
        android:id="@+id/newsAnnouncementsAndUpdatesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notableProjectsOfOurBarangayHorizontalScrollView"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="20sp"
        android:textColor="#61009F"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="News, Announcements and \n Updates" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/announcementsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsAnnouncementsAndUpdatesTextView"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"/>

    <RelativeLayout
        android:id="@+id/newsAnnouncementsAndUpdates1CoverRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="28dp"
        android:layout_below="@+id/newsAnnouncementsAndUpdatesTextView">

    </RelativeLayout>
    
</RelativeLayout>

</ScrollView>