<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvFaqTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Common Questions"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFaqQuestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        app:layout_constraintTop_toBottomOf="@id/tvFaqTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTalkToAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Can't find what you're looking for? Type your question instead."
        android:textSize="14sp"
        android:textColor="#2196F3"
        android:textStyle="italic"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/rvFaqQuestions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>