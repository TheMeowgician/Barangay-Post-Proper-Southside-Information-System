<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
    </style>
    <style name="roundedImageView">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

    <style name="MenuItemsAttributes" >
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:colorControlHighlight">#7C33B0</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!-- Base application theme -->
    <style name="Theme.BarangayApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Image styles -->
    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>


</resources>